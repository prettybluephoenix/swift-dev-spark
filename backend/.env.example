# Swifter Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
PORT=8000

# Appwrite Configuration (Free Tier)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here
APPWRITE_DATABASE_ID=swifter-db

# AI Services (Free Tiers)
GROQ_API_KEY=gsk_your_groq_api_key_here
HUGGING_FACE_TOKEN=hf_your_hugging_face_token_here

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_USERNAME=your_github_username

# Social Media Platform APIs
# Reddit (Free API)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Discord (Free Webhooks/Bot)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
DISCORD_BOT_TOKEN=your_discord_bot_token

# Mastodon (Free)
MASTODON_ACCESS_TOKEN=your_mastodon_access_token
MASTODON_API_BASE_URL=https://mastodon.social

# Twitter/X (Manual posting only - optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Railway Configuration
RAILWAY_TIMEZONE=Africa/Lagos
FRONTEND_URL=https://your-app.vercel.app

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here